#include <stdio.h>

int main() {
    int n, x, found = -1;
    printf("Enter size of array: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) scanf("%d", &arr[i]);

    printf("Enter number to search for: ");
    scanf("%d", &x);

    for (int i = 0; i < n; i++) {
        if (arr[i] == x) {
            found = i;
            break;
        }
    }

    if (found != -1) printf("Element %d found at index %d\n", x, found);
    else printf("Element not found.\n");
    return 0;
}
